package problema_cadastro_vetor.copy;

import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		Aluno[] register = new Aluno[30];

		System.out.print("How many students want register? ");
		int n = sc.nextInt();

		for (int i = 0; i < n; i++) {
			System.out.println();
			System.out.println("Student nÂº " + (i + 1));
			sc.nextLine();
			System.out.print("Name: ");
			String name = sc.nextLine();
			System.out.print("Registration: ");
			int registration = sc.nextInt();
			System.out.print("Position: ");
			int position = sc.nextInt();

			register[position] = new Aluno(name, registration);

		}

		System.out.println();
		System.out.println("Registered students: ");
		for (int i = 0; i < 30; i++) {
			if (register[i] != null) {
				System.out.println(i + ": " + register[i]);
			}
		}

		sc.close();

	}

}
